{
  "$schema": "https://json.schemastore.org/jsconfig",
  "compilerOptions": {
    "checkJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "nodenext"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ]
}